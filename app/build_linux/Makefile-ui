VPATH = ../src/

LKDIR=/home/scoplin/project/st_dev/lk
WEXDIR=/home/scoplin/project/st_dev/wex
WEXLIB = $(WEXDIR)/wexuxwx3.a
LKLIB = $(LKDIR)/lkuxwx3.a
CORETRACEDIR = ../../coretrace
CORETRACELIB = $(CORETRACEDIR)/build_linux/coretrace.a

CC = gcc
CXX = g++

CFLAGS = -g -O2 -std=c++11 -I. -I$(LKDIR)/include -I$(WEXDIR)/include -I$(CORETRACEDIR) -DLK_USE_WXWIDGETS `wx-config-3 --cflags`

CUDA_PATH       ?= /usr/local/cuda
CUDA_INC_PATH   ?= $(CUDA_PATH)/include
CUDA_BIN_PATH   ?= $(CUDA_PATH)/bin
CUDA_LIB_PATH   ?= $(CUDA_PATH)/lib

# OS-specific build flags
ifeq ($(shell uname),Darwin)
	LDFLAGS       := -Xlinker -rpath $(CUDA_LIB_PATH) -L$(CUDA_LIB_PATH) -lcudart
	CFLAGS   	  := $(CFLAGS) -arch $(OS_ARCH)
else
	ifeq ($(OS_SIZE),32)
		LDFLAGS   := -L$(CUDA_LIB_PATH) -lcudart
		CFLAGS   :=  $(CFLAGS) -m32
	else
		CUDA_LIB_PATH := $(CUDA_LIB_PATH)64
		LDFLAGS       := -L$(CUDA_LIB_PATH) -lcudart
		CFLAGS       :=  $(CFLAGS) -m64
	endif
endif



CXXFLAGS = $(CFLAGS)
LDFLAGS :=  $(WEXLIB) $(LKLIB) $(CORETRACELIB) `wx-config-3 --libs stc` `wx-config-3 --libs aui` `wx-config-3 --libs gl` `wx-config-3 --libs` -lm -lcurl  -lfontconfig -ldl $(LDFLAGS)


OBJECTS = \
    console.o\
    elementlist.o \
    fluxmap.o \
    intersections.o \
    geometry.o \
    optics.o \
    raydata.o \
    script.o \
    sunshape.o \
    soltrace.o \
    project.o \
    trace.o

TARGET = soltrace

$(TARGET): $(OBJECTS) $(WEXLIB) $(CORETRACELIB)
	$(CXX) -g $(CXXFLAGS) -o $@ $^ $(LDFLAGS)
	mkdir -p ../deploy/linux_64
	cp $(TARGET) ../deploy/linux_64

clean:
	rm -f $(TARGET) $(OBJECTS)
